<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VariFIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/VariFit00Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'Century Gothic', sans-serif;">VariFit</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item ">
                            <a class="nav-link  " asp-area="Customer" asp-controller="Home" asp-action="Index" style="color:white">Home</a>
                        </li>
          
                        
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Manangement
                                </a>
                                <ul class="dropdown-menu">

                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Equipment" asp-action="Index">Equipment</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Exercise" asp-action="Index">Exercise</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Muscle" asp-action="Index">Muscle</a>
                                    </li>

                                </ul>
                            </li>
                        }
                        <li>
                            <div class="">
                                @if (User.IsInRole(SD.Role_Admin))
                                {
                                    <a asp-area="Customer" asp-controller="Workout" asp-action="Index" class="btn btn-primary">Users Workouts</a>
                                }else
                                {
                                    <a asp-area="Customer" asp-controller="Workout" asp-action="Index" class="btn btn-primary">My Workouts</a>
                                }
                            </div>
                        </li>





                        <li>
                            <div class="">
                                @if (User.IsInRole(SD.Role_Customer))
                                {
                                    <a asp-area="Customer" asp-controller="Workout" asp-action="Favorites" class="btn btn-primary">Favorites</a>
                                }
                            </div>
                        </li>

                        <li>
                            <div class="">
                                @if (User.IsInRole(SD.Role_Customer))
                                {
                                    <a asp-area="Customer" asp-controller="Workout" asp-action="Community" class="btn btn-primary">Community</a>
                                }
                            </div>
                        </li>



                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary">
        <div class="container text-center text-white-50">
            VariFit -- <i class="bi bi-heart-pulse-fill"></i> -- healthy lifestyle 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
