@model List<Exercise>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Exercise List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Exercise" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Exercise</a>
            </div>

        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Exercise Name
                    </th>
                    <th>
                        Equipment
                    </th>
                    <th>
                        Muscles Worked
                    </th>
                    <th>
                        Level
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>
                            @obj.Id
                        </td>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Equipment.Name
                        </td>
                        <td>
                            @foreach (var muscle in obj.MuscleExercises.Select(me => me.Muscle.Name))
                            {
                                <span>@muscle</span>

                                <br />
                            }
                        </td>
                        <td>
                            @obj.Level
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Exercise" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Exercise" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>

